{
	"name": "yard/config-expander",
	"type": "package",
	"description": "Adds necessary security, defaults and settings to this site.",
	"version": "1.0.0",
	"license": "MIT",
	"config": {
		"allow-plugins": {
			"pestphp/pest-plugin": true,
			"composer/installers": true
		}
	},
	"require": {
		"php": "^8.0",
		"spatie/laravel-package-tools": "^1.16"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^3.57",
		"orchestra/testbench": "^8.23",
		"pestphp/pest": "^2.34",
		"szepeviktor/phpstan-wordpress": "^1.0",
		"larastan/larastan": "^2.0"
	},
	"autoload": {
		"psr-4": {
			"Yard\\ConfigExpander\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Yard\\ConfigExpander\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"analyse": [
			"sed -i -e 's#function __(#function ____(#' ./vendor/php-stubs/wordpress-stubs/wordpress-stubs.php",
			"vendor/bin/phpstan analyse --debug --memory-limit 1G"
		],
		"format": "vendor/bin/php-cs-fixer fix",
		"test": "vendor/bin/pest"
	},
	"extra": {
		"acorn": {
			"providers": [
				"Yard\\ConfigExpander\\ConfigExpanderServiceProvider",
				"Yard\\ConfigExpander\\BranchViewer\\BranchViewerServiceProvider",
				"Yard\\ConfigExpander\\ACF\\ACFServiceProvider",
				"Yard\\ConfigExpander\\Protection\\ProtectionServiceProvider"
			],
			"aliases": {
				"Example": "Yard\\ConfigExpander\\Facades\\Example"
			}
		}
	}
}
